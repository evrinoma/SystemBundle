{
    "name": "evrinoma/system-bundle",
    "description": "System",
    "keywords": [
        "Shell",
        "System"
    ],
    "type": "symfony-bundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Nikolay Nikolaev",
            "email": "evrinoma@gmail.com"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0"
    },
    "autoload": {
        "psr-4": {
            "Evrinoma\\SystemBundle\\": "src/"
        },
        "exclude-from-classmap": [
            "/Tests/"
        ]
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.12",
        "symfony/dotenv": "5.2.*",
        "evrinoma/hooks-bundle": "dev-master"
    },
    "scripts": {
        "auto-scripts": {
            "hooks": "vendor/bin/hooks evrinoma:hooks:create"
        },
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "pre-package-uninstall": ["vendor/bin/hooks evrinoma:hooks:delete", "true"]
    },
    "repositories": {
        "hooks": {
            "type": "vcs",
            "url": "https://github.com/evrinoma/HooksBundle.git"
        },
        "dto": {
            "type": "vcs",
            "url": "https://github.com/evrinoma/DtoBundle.git"
        },
        "utils": {
            "type": "vcs",
            "url": "https://github.com/evrinoma/UtilsBundle.git"
        }
    }
}
